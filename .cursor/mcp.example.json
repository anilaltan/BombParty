{
  "mcpServers": {
    "task-master-ai": {
      "command": "npx",
      "args": ["-y", "task-master-ai"],
      "env": {
        "TASK_MASTER_TOOLS": "all",
        "GOOGLE_API_KEY": "<your-google-api-key>",
        "GROQ_API_KEY": "<your-groq-api-key>",
        "XAI_API_KEY": "<your-xai-api-key>"
      }
    },
    "memory": { "command": "npx", "args": ["-y", "@modelcontextprotocol/server-memory"] },
    "context7": { "command": "npx", "args": ["-y", "@upstash/context7-mcp", "--api-key", "<your-context7-key>"] },
    "github": { "url": "https://api.githubcopilot.com/mcp/", "headers": { "Authorization": "Bearer <your-github-token>" } },
    "sequential-thinking": { "command": "npx", "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"] },
    "fetch": { "command": "uvx", "args": ["mcp-server-fetch"] },
    "RepoMapper": { "disabled": false, "timeout": 60, "type": "stdio", "command": "python", "args": ["path/to/RepoMapper/repomap_server.py"] }
  }
}
